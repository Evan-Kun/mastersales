# MasterSales Environment Configuration
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# LinkedIn credentials for real lead scraping
# Leave empty to use demo data mode (recommended for demos)
LINKEDIN_EMAIL=your-linkedin-email@example.com
LINKEDIN_PASSWORD=your-linkedin-password

# Scraper settings
SCRAPE_DELAY_MIN=2.0
SCRAPE_DELAY_MAX=5.0
SCRAPE_MAX_RESULTS=50

# App settings
DEBUG=true
DATABASE_URL=sqlite:///mastersales.db
