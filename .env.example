# MasterSales Environment Configuration
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# LinkedIn credentials for real lead scraping
# Preferred: configure via the web UI (Lead Sourcing > LinkedIn Credentials)
# .env values are used as fallback when web UI credentials are not set
# Leave empty to use demo data mode
LINKEDIN_EMAIL=
LINKEDIN_PASSWORD=

# Scraper settings
SCRAPE_DELAY_MIN=2.0
SCRAPE_DELAY_MAX=5.0
SCRAPE_MAX_RESULTS=50

# App settings
DEBUG=true
DATABASE_URL=sqlite:///mastersales.db
